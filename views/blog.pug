extends layout

//- block title
//-   | Blog - Furniture World

block main-content
  section#banner
    h1 Blog
    p Explore the Latest Trends and Tips in Furniture Design.

  section#blog-posts
    each post in blogPosts
      .blog-post
        .blog-post-thumbnail
          img(src=post.image, alt=post.title)
        .blog-post-content
          h2= post.title
          p= post.date
          p= post.excerpt
          a(href=`/blog/${post.id}`) Read More

